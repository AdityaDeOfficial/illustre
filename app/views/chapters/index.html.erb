<h1>Chapters</h1>

<table>
  <thead>
    <tr>
      <th>Chapter Number</th>
      <th>Chapter Title</th>
      <th>PDF Files</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.chapter_number %></td>
        <td><%= chapter.chapter_title %></td>
        <td>
          <% if chapter.pdf_files.attached? %>
            <% chapter.pdf_files.each do |pdf| %>
              <%= link_to pdf.filename, pdf %><br>
            <% end %>
          <% else %>
            <p>No PDF files attached.</p>
          <% end %>
        </td>
        <td><%= link_to 'Show', [chapter.manga, chapter] %></td>
        <td><%= link_to 'Edit', edit_manga_chapter_path(chapter.manga, chapter) %></td>
        <td><%= link_to 'Delete', [chapter.manga, chapter], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chapter', new_manga_chapter_path(@manga) %>

